# platform :ios, '9.0'

target 'GivDapps' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
	pod ‘Firebase’
	pod ‘Firebase/Core’
	pod ‘Firebase/Auth’
	pod ‘Firebase/Database’
	pod 'Firebase/Storage'
  	use_frameworks!

  # Pods for GivDapps

  target 'GivDappsTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'GivDappsUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
